<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ccv.checkhelzio.filacademica">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app2016"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Portada"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Menu"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="MENU_FIL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Actividades"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="ACTIVIDADES_FIL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".InfoEventoDialog"
            android:theme="@style/AppTheme.Transparent"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="ACTIVIDADES_INFO_EVENTOS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>