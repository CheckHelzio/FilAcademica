<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bt_eventos"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="2dp"
    android:layout_weight="1"
    android:background="@color/colorAccent"
    app:mrl_rippleAlpha="0.3"
    app:mrl_rippleColor="#000"
    app:mrl_rippleDelayClick="false"
    app:mrl_rippleDuration="500"
    app:mrl_rippleFadeDuration="500"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/textura_boton_01" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/sedes" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/tv_nombre_actividad"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:hint="ACTIVIDADES"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:text="SEDES"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:rotationY="180"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/textura_boton_01" />
    </RelativeLayout>

</com.balysv.materialripple.MaterialRippleLayout>