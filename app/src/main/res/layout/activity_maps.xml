<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ccv.checkhelzio.filacademica.MapsActivity"
        map:uiCompass="true"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/pagerSedes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#21000000" />

            <ccv.checkhelzio.filacademica.InkPageIndicator
                android:id="@+id/indicador_sedes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pagerSedes"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>