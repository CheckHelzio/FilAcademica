                    android:src="@drawable/ponente250"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="0dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="0" />

                <TextView
                    android:layout_width="56dp"
