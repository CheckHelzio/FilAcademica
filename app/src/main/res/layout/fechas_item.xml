<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:contentDescription="@string/label_lugar"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_map" />

        <TextView
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="@string/label_lugar"
            android:textColor="#121212"
            android:textSize="@dimen/diez_sp" />

        <TextView
            android:id="@+id/tv_lugar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="SalÃ³n 3, planta baja, Expo Guadalajara."
            android:textColor="#121212"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:contentDescription="@string/label_fecha"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_fechas" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:maxLines="1"
            android:textStyle="bold"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="@string/label_fecha"
            android:textColor="#121212"
            android:textSize="@dimen/diez_sp" />

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="2 de noviembre."
            android:textColor="#121212"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:contentDescription="@string/label_hora"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_reloj" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:textStyle="bold"
            android:paddingStart="72dp"
            android:text="@string/label_hora"
            android:textColor="#121212"
            android:textSize="@dimen/diez_sp" />

        <TextView
            android:id="@+id/tv_hora"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="12:00 - 15:30 hrs."
            android:textColor="#121212"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imagen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ponente7"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="0dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="0" />

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imagen"
                    android:layout_alignStart="@+id/imagen"
                    android:layout_below="@+id/imagen"
                    android:layout_marginTop="1dp"
                    android:text="Oscar M."
                    android:textAlignment="center"
                    android:textColor="#121212"
                    android:textSize="@dimen/diez_sp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
