<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:background="@color/colorPrimary"
        android:layout_above="@+id/botonera"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ccv.checkhelzio.filacademica.InkPageIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/padding_normal"
        app:pageIndicatorColor="@color/page_indicator_dark"
        app:currentPageIndicatorColor="@color/page_indicator_dark_selected" />


    <LinearLayout
        android:id="@+id/botonera"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:id="@+id/bt_info"
            android:padding="8dp"
            android:tint="#fff"
            app:srcCompat="@drawable/ic_info"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:tint="#fff"
            app:srcCompat="@drawable/ic_fechas"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:tint="#fff"
            app:srcCompat="@drawable/ic_organizador"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:tint="#fff"
            app:srcCompat="@drawable/ponencias"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>